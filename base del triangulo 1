#include "stdafx.h"
#include <iostream>
#include "stdio.h"
#include "conio.h"
using namespace std;


int main()
{
	 float altura, area, base;

   printf( "Introduzca base: " );
   scanf( "%f", &base );
   printf( "Introduzca altura: " );
   scanf( "%f", &altura );

   area = base * altura / 2;

   printf( "El area del triangulo es: %f", area );
   getch();
   return 0;
}
