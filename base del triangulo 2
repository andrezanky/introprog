#include "stdafx.h"
#include <iostream>
#include "stdio.h"
#include "conio.h"
#include "Math.h"
using namespace std;


int main()
{
	 float lado1, lado2, lado3, area,p;

   printf( "Introduzca lado1: " );
   scanf( "%f", &lado1 );
   printf( "Introduzca lado2: " );
   scanf( "%f", &lado2 );
   printf( "Introduzca lado3: " );
   scanf( "%f", &lado3 );  
   p=((lado1+lado2+lado3)/2);
   area=(sqrt(p-lado1)*(p-lado2)*(p-lado3));


   printf( "El area del triangulo es: %f", area );
   getch();
   return 0;
}

